<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo negro cuando se presiona -->
            <corners android:radius="8dp" /> <!-- Ajusta el radio según tus preferencias -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Color de fondo negro predeterminado -->
            <corners android:radius="8dp" /> <!-- Ajusta el radio según tus preferencias -->
        </shape>
    </item>
</selector>

